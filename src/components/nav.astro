---
import NavOption from "./NavOption.astro";
import DropDownOption from "./DropDownOption.astro";
---

<div class="w-1/3 flex justify-around items-center">
  <NavOption label="Inicio" />

  <!-- Menú desplegable para 'Packaging' -->
  <div class="py-4 relative inline-block group">
    <NavOption label="Packaging" />
    <div
      id="dropdownMenu"
      class="hidden absolute top-2 left-0 bg-white shadow-lg z-0 min-w-48 rounded-lg py-2 opacity-0 translate-y-2 group-hover:block group-hover:opacity-100 group-hover:translate-y-12"
    >
      <DropDownOption label="Bolsas" />
      <DropDownOption label="Cajas" />
      <DropDownOption label="Envolturas para alimentos" />
    </div>
  </div>
  <!-- Menú desplegable para 'Imprenta' -->
  <div class="py-4 relative inline-block group">
    <NavOption label="Imprenta" />
    <div
      id="dropdownMenu"
      class="hidden absolute top-2 left-0 bg-white shadow-lg z-0 min-w-48 rounded-lg py-2 opacity-0 translate-y-2 group-hover:block group-hover:opacity-100 group-hover:translate-y-12"
    >
      <DropDownOption label="Papeleria" />
      <DropDownOption label="Merchandising" />
      <DropDownOption label="Impresiones" />
    </div>
  </div>

  <NavOption label="Contacto" />
</div>
