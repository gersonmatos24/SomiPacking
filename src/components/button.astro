---
const { href, type, classList, id } = Astro.props;
---

{
  href ? (
    <a
      href={href}
      id={id}
      class={`celular:w-10/12 text-center block w-2/5 py-2 bg-transparent text-black text-base font-bold border-2 border-black hover:bg-black hover:text-white ${classList || ""}`}
    >
      <slot />
    </a>
  ) : (
    <button
      type={type}
      id={id}
      class={`celular:w-10/12 text-center w-2/5 py-2 bg-transparent text-black text-base font-bold border-2 border-black hover:bg-black hover:text-white ${classList || ""}`}
    >
      <slot />
    </button>
  )
}
