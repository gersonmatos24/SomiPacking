---
const { label } = Astro.props;
const pathname: string = Astro.url.pathname;

// Genera din√°micamente el path basado en el label
const path =
  label === "Inicio" ? "/" : `/${label.toLowerCase().replace(/\s+/g, "-")}`;

// Aplica clases activas si el pathname es "/" (inicio) o coincide con el path generado
const isActive = pathname === path || (label === "Inicio" && pathname === "/");
---

<a
  class={`font-bold  text-black  hover:text-red-600 ${
    isActive ? "border-b-2 border-black" : ""
  }`}
  href={path}
>
  {label}
</a>
