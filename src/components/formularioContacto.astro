---
const { titulo = "Contáctanos", texto = "Completa tus datos y nosotros te contactamos", colorBoton = "bg-pink-500" } = Astro.props;
---
<section class="">
<div class="bg-black bg-opacity-80 p-6 rounded-lg w-96 text-white">
  <h2 class="text-2xl font-bold text-pink-500">{titulo}</h2>
  <p class="text-sm">{texto}</p>
  <form>
    <input type="text" placeholder="Nombres y Apellidos" class="w-full p-2 my-2 border border-gray-300 rounded">
    <input type="email" placeholder="Correo Electrónico" class="w-full p-2 my-2 border border-gray-300 rounded">
    <input type="tel" placeholder="Teléfono" class="w-full p-2 my-2 border border-gray-300 rounded">
    <button class={`w-full text-white py-2 rounded mt-2 ${colorBoton}`}>ENVIAR</button>
  </form>
</div>
</section>